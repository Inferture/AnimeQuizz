<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.q.animequizz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SoloQuestionActivity" />
        <activity android:name=".SoloAnswerActivity" />
        <activity android:name=".SoloResultsActivity" />
        <activity android:name=".DuoQuestionActivity" />
        <activity android:name=".DuoAnswerActivity" />
        <activity
            android:name=".DuoResultsActivity"
            android:label="@string/title_activity_duo_results"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChoixModeActivity" />
        <activity android:name=".CustomListActivity" />
        <activity android:name=".AddCustomActivity" />
        <activity android:name=".OptionsActivity" />
        <activity android:name=".CreditsActivity"></activity>
    </application>

</manifest>